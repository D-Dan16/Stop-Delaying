<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/bg_task_card"
        android:layoutDirection="ltr"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

        <ImageView
                android:id="@+id/iv_task_status"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_tasks"
                app:tint="@color/neon_orange"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" />

        <TextView
                android:id="@+id/tv_task_title"
                style="@style/HeaderText"
                android:layout_width="294dp"
                android:layout_height="wrap_content"
                android:text="Task Title"
                android:gravity="left"
                android:paddingBottom="0dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                android:textSize="22sp" />

        <TextView
                android:id="@+id/tv_task_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Task Description"
                android:textColor="@color/text_primary"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_task_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

        <ImageView
                android:layout_width="28dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_turn_notifs_off"
                android:id="@+id/iv_task_notification"
                app:layout_constraintTop_toTopOf="@+id/iv_task_tts"
                app:layout_constraintBottom_toBottomOf="@+id/iv_task_tts"
                app:layout_constraintStart_toEndOf="@+id/iv_task_tts"
                android:layout_marginStart="16dp"
                app:layout_constraintVertical_bias="0.0" />

        <ImageView
                android:layout_width="28dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_tts"
                android:id="@+id/iv_task_tts"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_task_description"
                android:layout_marginTop="16dp" />

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_due_date"
                android:id="@+id/iv_clock"
                android:layout_marginStart="104dp"
                app:layout_constraintStart_toEndOf="@+id/iv_task_notification"
                app:layout_constraintTop_toTopOf="@+id/iv_task_notification"
                app:layout_constraintBottom_toBottomOf="@+id/iv_task_notification"
                app:layout_constraintVertical_bias="1.0" />

        <TextView
                android:text="DD-MM-YY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_task_due_date"
                app:layout_constraintTop_toTopOf="@+id/iv_clock"
                android:layout_marginStart="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_clock"
                app:layout_constraintStart_toEndOf="@+id/iv_clock"
                android:textColor="@color/text_primary"
                app:layout_constraintVertical_bias="0.6" />

        <TextView
                android:text="HH:MM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_task_due_time"
                app:layout_constraintTop_toTopOf="@+id/iv_clock"
                app:layout_constraintBottom_toBottomOf="@+id/iv_clock"
                android:textColor="@color/text_primary"
                app:layout_constraintVertical_bias="0.6"
                app:layout_constraintStart_toEndOf="@+id/tv_task_due_date"
                android:layout_marginStart="8dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>