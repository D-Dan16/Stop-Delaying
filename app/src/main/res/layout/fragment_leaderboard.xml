<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/leaderboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_primary">

    <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_secondary"
            android:paddingTop="40dp">

        <!-- Header section with navigation buttons and title -->

        <!-- TabLayout for switching between Day Streak and Task Streak -->
        <com.google.android.material.tabs.TabLayout
                android:id="@+id/leaderboard_tab_layout"
                android:layout_width="match_parent"
                android:layout_height="74dp"
                app:tabMode="fixed"
                app:tabGravity="fill"
                android:background="@android:color/transparent"
                app:tabTextColor="@color/accent_orange_toggle"
                app:tabSelectedTextColor="@color/neon_orange"
                app:tabIndicatorColor="@color/neon_orange">

            <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Day Streak" />

            <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Task Streak" />
        </com.google.android.material.tabs.TabLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- ViewPager2 to host the different leaderboard views (fragments) -->
    <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/leaderboard_view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>