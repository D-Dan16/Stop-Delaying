<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ─────────────────────────────────────────────── -->
    <!-- HEADERS & TEXT                                 -->
    <!-- ─────────────────────────────────────────────── -->

    <!-- Big screen header: "Let's Get Started" -->
    <style name="HeaderText">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <!-- Subtitle: "Create your account..." -->
    <style name="SubHeaderText">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingBottom">24dp</item>
    </style>

    <!-- Section label: "Username", "Password" -->
    <style name="LabelText">
        <item name="android:layout_gravity">left</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <!-- Body / subtle text like "Must be at least 8 characters" -->
    <style name="BodyHintText">
        <item name="android:textColor">@color/text_hint</item>
        <item name="android:textSize">13sp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <!-- Links: "Terms & Privacy Policy", "Log In" -->
    <style name="LinkText">
        <item name="android:textColor">@color/accent_orange</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!-- ─────────────────────────────────────────────── -->
    <!-- BUTTON STYLES                                   -->
    <!-- ─────────────────────────────────────────────── -->

    <!-- Big rounded orange CTA button -->
    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/accent_orange</item>
        <item name="android:textColor">@color/text_on_accent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">14dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <!-- Secondary button (dark background, border) -->
    <style name="SecondaryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/accent_orange</item>
        <item name="android:textColor">@color/text_on_accent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <!-- Text-only button (used for links) -->
    <style name="FlatButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/accent_orange</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.Red" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/accent_red_logout</item>
        <item name="strokeColor">@color/accent_red_logout</item>
        <item name="cornerRadius">12dp</item>
        <item name="strokeWidth">3dp</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.DarkRed" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/dark_red</item>
        <item name="strokeColor">@color/dark_red</item>
        <item name="cornerRadius">12dp</item>
        <item name="strokeWidth">3dp</item>
    </style>

    <!-- ─────────────────────────────────────────────── -->
    <!-- TEXT FIELD / INPUT STYLES                      -->
    <!-- ─────────────────────────────────────────────── -->

    <style name="InputText">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="InputField" parent="InputText">
        <item name="android:background">@drawable/input_field_bg</item>
    </style>

    <style name="InputFieldPassword" parent="InputField">
        <item name="android:inputType">textPassword</item>
    </style>


    <!-- ─────────────────────────────────────────────── -->
    <!-- MENU ITEMS                                      -->
    <!-- ─────────────────────────────────────────────── -->

    <style name="MenuItem">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
    </style>

    <style name="MenuSectionHeader">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>


    <style name="BgLinearLayout">
        <item name="android:padding">25dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="InputTextWithTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!-- ─────────────────────────────────────────────── -->
    <!-- LEADERBOARD                                     -->
    <!-- ─────────────────────────────────────────────── -->
    <style name="LeaderboardText">
        <item name="android:textSize">20sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="LeaderboardRankText" parent="LeaderboardText">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="LeaderboardScoreText" parent="LeaderboardText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="RadioButton">
        <item name="buttonTint">@color/neon_orange</item>
    </style>

    <style name="Widget.App.PopupCardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">20dp</item>
        <item name="cardBackgroundColor">@color/bg_secondary</item>
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">12dp</item>
    </style>

</resources>